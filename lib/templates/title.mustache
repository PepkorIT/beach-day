<div class="main-title">
    <h2>{{title}}</h2>
    <p class="summary">
        {{>summary}}
        <table>
            <tr>
                <td>Run Time:</td>
                <td>{{durationFormatted}}</td>
            </tr>
            <tr>
                <td>Start Time:</td>
                <td>{{startTimeFormatted}}</td>
            </tr>
            <tr>
                <td>End Time:</td>
                <td>{{endTimeFormatted}}</td>
            </tr>
            {{#maxTestTime}}
            <tr>
                <td>Maximum Test Time:</td>
                <td>{{maxTestTime}}</td>
            </tr>
            {{/maxTestTime}}
        </table>
    </p>
</div>